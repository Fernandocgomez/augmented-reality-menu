{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@xreats/feature-login": [
        "libs/angular/features/restaurant-owner-dashboard/login/src/index.ts"
      ],
      "@xreats/nestjs-auth": ["libs/nestjs/auth/src/index.ts"],
      "@xreats/nestjs-bcrypt": ["libs/nestjs/bcrypt/src/index.ts"],
      "@xreats/nestjs-restaurant-owner": [
        "libs/nestjs/restaurant-owner/src/index.ts"
      ],
      "@xreats/nestjs-shared": ["libs/nestjs/shared/src/index.ts"],
      "@xreats/nestjs-user": ["libs/nestjs/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
