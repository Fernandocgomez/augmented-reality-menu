{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@xreats/angular/shared": ["libs/angular/shared/src/index.ts"],
			"@xreats/feature-login": [
				"libs/angular/features/restaurant-owner-dashboard/login/src/index.ts"
			],
			"@xreats/login-access-data": ["libs/angular/data-access/login-data-access/src/index.ts"],
			"@xreats/nestjs-auth": ["libs/nestjs/auth/src/index.ts"],
			"@xreats/nestjs-bcrypt": ["libs/nestjs/bcrypt/src/index.ts"],
			"@xreats/nestjs-restaurant-owner": ["libs/nestjs/restaurant-owner/src/index.ts"],
			"@xreats/nestjs-user": ["libs/nestjs/user/src/index.ts"],
			"@xreats/nestjs/shared": ["libs/nestjs/shared/src/index.ts"],
			"@xreats/shared-models": ["libs/shared-models/src/index.ts"],
			"@xreats/ui/alerts": ["libs/angular/ui/ui-alerts/src/index.ts"],
			"@xreats/ui/material": ["libs/angular/ui/material/src/index.ts"],
			"@xreats/ui/navigation": ["libs/angular/ui/ui-navigation/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
